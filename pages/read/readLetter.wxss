/* pages/read/readLetter.wxss */
.contain {
    background-color: #f6f6f6;
    width: 670rpx;
    margin: 50rpx 40rpx 0rpx;
    border-top-left-radius: 14rpx;
    border-top-right-radius: 14rpx;
    padding-top: 20rpx;
}

.letter_scroll {
    width: 100%;
    height: 660rpx;
}

.receiver {
    margin: 0rpx 40rpx 0rpx;
    font-size: 35rpx;
}

.content {
    margin: 0rpx 40rpx 10rpx;
    /* white-space: pre-line; */
    line-height: 60rpx;
    font-size: 35rpx;
}

.selected {
    font-size: 15px;
    color: #aaa;
    margin-left: 40rpx;
}

.sender {
    margin: 50rpx 40rpx;
    text-align: right;
    font-size: 35rpx;
}

.view-recordbtn {
    position: relative;
    bottom: -15%;
}

.recordBtn {
    width: 200rpx;
}

.voice {
    width: 480rpx;
    height: 100rpx;
    background-color: #fff;
    border-radius: 5px;
    margin: 10rpx 95rpx 0rpx;
}

.resetBtn {
  margin-left: 110rpx;
}

.submitBtn {
  margin-left: 260rpx;
}

.cancelTxt {
  margin-left: 130rpx;
}

.submitTxt {
  margin-left: 285rpx;
}

.share-view {
    background-color: #f6f6f6;
    position: absolute;
    width: 100%;
    bottom: 0rpx;
}

.share-view button {
    background-color: #fff;
}

.share-view button::after {
    border-radius: 0;
}

.cancelBtn {
    margin-top: 10rpx;
}