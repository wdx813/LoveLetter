/* pages/read/readLetter.wxss */
.contain {
    background-color: #fff;
    width: 670rpx;
    margin: 50rpx 40rpx 0rpx;
    border-top-left-radius: 14rpx;
    border-top-right-radius: 14rpx;
    padding-top: 20rpx;
}

.letter_scroll {
    width: 100%;
    height: 660rpx;
}

.receiver {
    margin: 0rpx 40rpx 0rpx;
    font-size: 35rpx;
}

.content {
    margin: 0rpx 40rpx 10rpx;
    /* white-space: pre-line; */
    line-height: 60rpx;
    font-size: 35rpx;
}

.selected {
    font-size: 15px;
    color: #aaa;
    margin-left: 40rpx;
}

.sender {
    margin: 50rpx 40rpx;
    text-align: right;
    font-size: 35rpx;
}

.recordBtn {
    width: 200rpx;
    position: relative;
    bottom: -25%;
}