/* pages/letter/letterList.wxss */
.letter_type {
    position: fixed;
    top: 40rpx;
}

.letter_type_text {
    font-size: 17px;
    color: #e93e30;
}

.img_select {
    width: 13px;
    height: 13px;
    margin-left: 15rpx;
}

.img_edit {
    width: 15px;
    height: 15px;
    position: fixed;
    top: 55rpx;
    right: 60rpx;
}

.letters {
    width: 100%;
    height: 850rpx;
    overflow: hidden; 
    white-space: nowrap;
    position: fixed;
    top: 120rpx;
}

.paper {
    display: inline-block;
    background-color: #fff;
    border-radius: 7px; 
    width: 570rpx;
    height: 630rpx; 
    align-content: center;
}

.content {
    margin-top: -40rpx;
    margin-left: 40rpx;
    width: 500rpx;
    white-space: pre-line;
    line-height: 60rpx;
    font-size: 35rpx;
}

.select {
    font-size:15px; 
    color: #aaa;
    margin-left: 40rpx;
}

.letter {
    width: 560rpx;
    height: 620rpx;
}

.readBtn {
    width: 70px;
    height: 70px;
    position: fixed;
    bottom: 150rpx;
}

.read_btn_text {
    position: fixed;
    bottom: 100rpx;
    font-size: 15px;
    color: #aaa
}